<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/lightPrimaryColor</item>
    </style>

    <style name="article_section_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/list_item_section_text_margin_left</item>
        <item name="android:layout_marginTop">@dimen/list_item_text_margin_top</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">@dimen/list_item_section_text_size</item>
    </style>

    <style name="article_title_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/list_item_title_text_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/list_item_title_text_margin_left</item>
        <item name="android:layout_marginRight">@dimen/list_item_title_text_margin_right</item>
        <item name="android:gravity">left</item>
        <item name="android:lines">3</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/list_item_title_text_size</item>
    </style>

    <style name="article_publish_time_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/list_item_title_text_margin_left</item>
        <item name="android:layout_marginRight">@dimen/list_item_time_text_margin_right</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/timeText</item>
        <item name="android:textSize">@dimen/list_item_time_text_size</item>
    </style>

    <style name="article_thumbnail_image_view">
        <item name="android:layout_width">@dimen/list_item_image_width</item>
        <item name="android:layout_height">@dimen/list_item_image_height</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:contentDescription">@string/logo</item>
    </style>
</resources>
