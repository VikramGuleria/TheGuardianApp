<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:background="@color/listViewBackground"
    android:orientation="horizontal"
    android:padding="8dp">


    <ImageView
        android:id="@+id/article_thumbnail_image_view"
        style="@style/article_thumbnail_image_view"
        app:srcCompat="@mipmap/ic_launcher"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/article_thumbnail_image_view"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="2dp"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <TextView
            android:id="@+id/article_section_text_view"
            style="@style/article_section_text_view"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/article_title_text_view"
            style="@style/article_title_text_view"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/article_publish_time_text_view"
            style="@style/article_publish_time_text_view" />

    </LinearLayout>

    <View
        android:id="@+id/line"
        style="@style/line" />

</RelativeLayout>

